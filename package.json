{
  "name": "track-your-appeal-frontend",
  "description": "Track your appeal",
  "version": "0.0.2",
  "private": true,
  "engines": {
    "node": ">=8.9.0"
  },
  "scripts": {
    "start": "cross-env NODE_PATH=. LOG_OUTPUT=single node server.js",
    "setup": "cross-env NODE_PATH=. grunt generate-assets",
    "postinstall": "yarn setup",
    "dev": "cross-env NODE_PATH=. NODE_ENV=development LOG_OUTPUT=multi grunt dev",
    "dev-mock-api": "cross-env NODE_PATH=. NODE_ENV=development LOG_LEVEL=OFF grunt dev-mock-services",
    "test": "cross-env NODE_PATH=. NODE_ENV=test mocha test/unit --recursive",
    "coverage": "cross-env NODE_PATH=. istanbul cover _mocha test/unit/** --dir test/coverage/html",
    "pa11y": "cross-env NODE_PATH=. LOG_LEVEL=OFF mocha test/accessibility -r test/chai-sinon.js --reporter spec --recursive --timeout 10000",
    "test:smoke": "./bin/run-tests.sh smoke-tests",
    "test:functional": "echo 'this will be implemented as a seperate story'",
    "cross-browser": "NODE_ENV=TESTING LOG_LEVEL=OFF NODE_PATH=. codeceptjs run -c test/smoke/saucelabs.conf.js --steps",
    "security-scan": "cross-env NODE_PATH=. codeceptjs run --config test/smoke/securityScan.conf.js --steps",
    "eslint": "cross-env NODE_PATH=. eslint .",
    "security-checks": "cross-env NODE_PATH=. grunt security-checks",
    "sonar-scan": "sonar-scanner",
    "test:coverage": "yarn coverage",
    "test:a11y": "yarn pa11y",
    "lint": "eslint .",
    "test:nsp": "yarn security-checks"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hmcts/track-your-appeal-frontend.git"
  },
  "dependencies": {
    "@hmcts/nodejs-healthcheck": "^1.4.5",
    "@hmcts/nodejs-logging": "^3.0.0",
    "applicationinsights": "1.0.1",
    "body-parser": "^1.17.1",
    "config": "^1.30.0",
    "cookie-parser": "^1.4.3",
    "cookie-session": "^2.0.0-beta.3",
    "cross-env": "^4.0.0",
    "crypto-js": "^3.1.9-1",
    "express": "^4.15.2",
    "express-nunjucks": "^2.2.3",
    "govuk-elements-sass": "^3.1.0",
    "govuk_frontend_toolkit": "^6.0.4",
    "govuk_template_jinja": "^0.22.2",
    "grunt": "^1.0.1",
    "grunt-cli": "^1.2.0",
    "grunt-concurrent": "^2.3.1",
    "grunt-contrib-copy": "^1.0.0",
    "grunt-contrib-watch": "^1.0.0",
    "grunt-nodemon": "^0.4.2",
    "grunt-nsp": "^2.3.1",
    "grunt-sass": "^2.0.0",
    "grunt-sync": "^0.6.2",
    "helmet": "^3.5.0",
    "http-status-codes": "^1.1.6",
    "joi": "^13.0.1",
    "lodash": "^4.17.4",
    "moment": "^2.18.1",
    "moment-timezone": "^0.5.13",
    "nock": "^9.1.6",
    "node-sass": "4.5.3",
    "nunjucks": "^3.0.0",
    "serve-favicon": "^2.4.2",
    "superagent": "^3.8.2",
    "superagent-proxy": "^1.0.2"
  },
  "devDependencies": {
    "@hmcts/eslint-config": "^1.4.0",
    "chai": "^3.5.0",
    "chai-http": "^3.0.0",
    "codeceptjs": "^1.2.0",
    "eslint": "^4.19.1",
    "eslint-plugin-mocha": "^5.0.0",
    "istanbul": "^0.4.5",
    "jsdom": "^9.12.0",
    "mocha": "^3.2.0",
    "mocha-jenkins-reporter": "^0.3.8",
    "mochawesome": "^3.0.0",
    "nightmare": "^2.10.0",
    "nightmare-upload": "^0.1.1",
    "nock": "^9.1.6",
    "nsp": "^2.6.3",
    "pa11y": "^4.9.0",
    "pg": "^6.1.5",
    "portscanner": "^2.1.1",
    "proxyquire": "^1.8.0",
    "request-json": "^0.6.1",
    "sinon": "^2.1.0",
    "sinon-chai": "^2.9.0",
    "sonar-scanner": "^3.0.3",
    "supertest": "^3.0.0",
    "urlsafe-base64": "^1.0.0",
    "webdriverio": "^4.7.1",
    "puppeteer": "^1.3.0",
    "mocha-multi": "^1.0.1",
    "mocha-junit-reporter": "^1.17.0"
  }
}
