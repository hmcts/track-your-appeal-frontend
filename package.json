{
  "name": "track-your-appeal-frontend",
  "description": "Track your appeal",
  "version": "0.0.1",
  "private": true,
  "engines": {
    "node": ">=7.0"
  },
  "scripts": {
    "start": "cross-env NODE_PATH=. LOG_OUTPUT=single node server.js",
    "setup": "cross-env NODE_PATH=. grunt generate-assets",
    "postinstall": "yarn setup",
    "dev": "cross-env NODE_PATH=. NODE_ENV=development LOG_OUTPUT=multi grunt dev",
    "pretest": "grunt mock-services",
    "test": "cross-env NODE_PATH=. mocha test/unit --recursive",
    "posttest": "grunt services",
    "precoverage": "grunt mock-services",
    "coverage": "cross-env NODE_PATH=. istanbul cover _mocha test/unit/** --dir test/coverage/html",
    "postcoverage": "grunt services",
    "prepa11y": "grunt mock-services",
    "pa11y": "cross-env NODE_PATH=. LOG_LEVEL=OFF mocha test/accessibility -r test/chai-sinon.js --reporter spec --recursive --timeout 10000",
    "postpa11y": "grunt services",
    "smoke-test": "cross-env NODE_PATH=. codeceptjs run test/smoke/ --steps",
    "security-scan": "cross-env NODE_PATH=. codeceptjs run --config test/smoke/securityScan.conf.js --steps",
    "eslint": "cross-env NODE_PATH=. eslint .",
    "security-checks": "cross-env NODE_PATH=. grunt security-checks",
    "post-data": "cross-env NODE_PATH=. node post-data.js",
    "sonar-scanner": "node_modules/sonar-scanner/bin/sonar-scanner"
  },
  "repository": {
    "type": "git",
    "url": "git@git.reform:sscs/track-your-appeal-frontend.git"
  },
  "dependencies": {
    "body-parser": "^1.17.1",
    "chai": "^3.5.0",
    "codeceptjs": "^0.5.1",
    "cross-env": "^4.0.0",
    "crypto-js": "^3.1.9-1",
    "eslint": "^3.19.0",
    "eslint-plugin-mocha": "^4.9.0",
    "express": "^4.15.2",
    "express-nunjucks": "^2.2.3",
    "font-awesome": "^4.7.0",
    "govuk-elements-sass": "^3.0.2",
    "govuk_frontend_toolkit": "^5.2.0",
    "govuk_template_jinja": "^0.19.2",
    "grunt": "^1.0.1",
    "grunt-cli": "^1.2.0",
    "grunt-concurrent": "^2.3.1",
    "grunt-contrib-copy": "^1.0.0",
    "grunt-contrib-watch": "^1.0.0",
    "grunt-env": "^0.4.4",
    "grunt-nodemon": "^0.4.2",
    "grunt-nsp": "^2.3.1",
    "grunt-sass": "^2.0.0",
    "grunt-sync": "^0.6.2",
    "helmet": "^3.5.0",
    "http-status-codes": "^1.1.6",
    "istanbul": "^0.4.5",
    "jsdom": "^9.12.0",
    "lodash": "^4.17.4",
    "log4js": "^1.1.1",
    "mocha": "^3.2.0",
    "mocha-jenkins-reporter": "^0.3.8",
    "mochawesome": "^2.2.0",
    "mockery": "^2.0.0",
    "moment": "^2.18.1",
    "nightmare": "^2.10.0",
    "nightmare-upload": "^0.1.1",
    "nodejs-logging": "^1.1.0",
    "nsp": "^2.6.3",
    "nunjucks": "^3.0.0",
    "pa11y": "^4.9.0",
    "pg": "^6.1.5",
    "portscanner": "^2.1.1",
    "request-json": "^0.6.1",
    "serve-favicon": "^2.4.2",
    "sinon": "^2.1.0",
    "sinon-chai": "^2.9.0",
    "sonar-scanner": "^1.0.1",
    "superagent": "^3.5.2",
    "supertest": "^3.0.0",
    "urlsafe-base64": "^1.0.0"
  }
}
