#!groovy

properties([
        pipelineTriggers([cron('30 20 * * *')]),
        parameters([
                string(name: 'URL_TO_TEST', defaultValue: 'https://sscs-tya-frontend-aat.service.core-compute-aat.internal/', description: 'The URL you want to run these tests against'),
        ])
])

@Library("Infrastructure")

def product = "sscs-tya"
def component = "frontend"

withNightlyPipeline("nodejs", product, component) {
    env.TEST_URL = params.URL_TO_TEST

    enableCrossBrowserTest()
    enableSecurityScan()

//    enableSlackNotifications('#sscs')  // can be turned back on once the overnight functionality is working fully
}
